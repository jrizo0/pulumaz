{
  "name": "@pulumaz/functions",
  "version": "0.0.0",
  "main": "dist/src/functions/httpTrigger.js",
  "scripts": {
    "prebuild": "npm run clean",
    "build": "tsc",
    "prebuild:deploy": "npm run clean",
    "build:deploy": "tsc && bash -c 'bash build.sh'",

    "prebuild2": "npm run clean",
    "build2": "esbuild src/functions/*.ts --bundle --platform=node --target=node20 --outdir=dist/src/functions --external:@azure/functions",
    "build2:deploy": "bun run build2 && bash -c 'bash build.sh'",
    "build2:watch": "esbuild src/functions/*.ts --bundle --platform=node --target=node20 --outdir=dist/src/functions --external:@azure/functions --watch",

    "clean": "rimraf dist",
    "prestart": "npm run clean && npm run build",
    "start": "func start",
    "test": "echo \"No tests yet...\""
  },
  "dependencies": {
    "@azure/functions": "^4.6.0",
    "hono": "^4.6.14",
    "@pulumaz/core": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "20.x",
    "azure-functions-core-tools": "^4.0.6610",
    "esbuild": "^0.20.0",
    "rimraf": "^5.0.0"
  }
}
